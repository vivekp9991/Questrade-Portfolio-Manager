{
  "name": "questrade-portfolio-fullstack",
  "version": "1.0.0",
  "description": "Questrade Dividend Portfolio Manager - Full Stack Application",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd Backend/questrade-portfolio-microservices && npm run dev",
    "dev:frontend": "cd Frontend/dividend-portfolio-manager && npm run dev",
    "start": "concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd Backend/questrade-portfolio-microservices && npm start",
    "start:frontend": "cd Frontend/dividend-portfolio-manager && npm run dev",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd Backend/questrade-portfolio-microservices && npm run install:all",
    "install:frontend": "cd Frontend/dividend-portfolio-manager && npm install",
    "sync:dividends": "cd Backend/questrade-portfolio-microservices/questrade-sync-api && npm run sync:dividends",
    "sync:dividends:person": "cd Backend/questrade-portfolio-microservices/questrade-sync-api && npm run sync:dividends:person",
    "sync:dividends:symbol": "cd Backend/questrade-portfolio-microservices/questrade-sync-api && npm run sync:dividends:symbol",
    "backend:only": "cd Backend/questrade-portfolio-microservices && npm run dev",
    "frontend:only": "cd Frontend/dividend-portfolio-manager && npm run dev",
    "stop": "taskkill /F /IM node.exe /T || echo Services stopped",
    "restart": "npm run stop && timeout /t 2 /nobreak && npm run dev",
    "restart:backend": "npm run stop && timeout /t 2 /nobreak && npm run backend:only",
    "restart:frontend": "npm run stop && timeout /t 2 /nobreak && npm run frontend:only",
    "test:backend": "curl http://localhost:4001/health && curl http://localhost:4002/health && curl http://localhost:4003/health && curl http://localhost:4004/health",
    "test:frontend": "curl http://localhost:5173"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "questrade",
    "portfolio",
    "dividend",
    "tracker",
    "microservices",
    "solidjs"
  ],
  "author": "",
  "license": "MIT"
}
