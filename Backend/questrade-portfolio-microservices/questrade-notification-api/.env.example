# Server Configuration
PORT=4005
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/questrade_notifications

# Service Dependencies
AUTH_API_URL=http://localhost:4001/api
SYNC_API_URL=http://localhost:4002/api
PORTFOLIO_API_URL=http://localhost:4003/api
MARKET_API_URL=http://localhost:4004/api

# Alert Configuration
ALERT_CHECK_INTERVAL_MINUTES=5
ENABLE_ALERT_ENGINE=true
MAX_ALERTS_PER_PERSON=100

# Notification Channels
ENABLE_EMAIL=true
ENABLE_SMS=false
ENABLE_PUSH=false
ENABLE_WEBHOOKS=true

# Email Configuration (using SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Questrade Portfolio Tracker

# SMS Configuration (using Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notification Configuration
FCM_SERVER_KEY=your-fcm-server-key

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_MAX_RETRIES=3

# Rate Limiting
MAX_NOTIFICATIONS_PER_HOUR=50
MAX_ALERTS_PER_DAY=200

# Logging
LOG_LEVEL=info