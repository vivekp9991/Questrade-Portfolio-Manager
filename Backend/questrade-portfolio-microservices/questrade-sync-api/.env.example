# Server Configuration
PORT=4002
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/questrade_portfolio

# Auth API Configuration
AUTH_API_URL=http://localhost:4001/api
AUTH_API_KEY=your-internal-api-key

# Sync Configuration
SYNC_INTERVAL_MINUTES=15
ENABLE_AUTO_SYNC=true
MAX_SYNC_RETRIES=3

# Rate Limiting
QUESTRADE_RATE_LIMIT_PER_SECOND=5
QUESTRADE_MAX_CONCURRENT_REQUESTS=3

# Logging
LOG_LEVEL=info

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_SECONDS=300