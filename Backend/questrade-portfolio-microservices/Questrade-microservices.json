  "item": [
    {
      "name": "1. Auth API (Port 4001)",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{auth_url}}/health"
          }
        },
        {
          "name": "Persons",
          "item": [
            {
              "name": "Create Person with Token",
              "request": {
                "method": "POST",
                "header": [
                  { "key": "Content-Type", "value": "application/json" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"personName\": \"{{person_name}}\",\n  \"displayName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"refreshToken\": \"YOUR_QUESTRADE_REFRESH_TOKEN_HERE\"\n}"
                },
                "url": "{{auth_url}}/api/persons"
              }
            },
            {
              "name": "Get All Persons",
              "request": {
                "method": "GET",
                "url": "{{auth_url}}/api/persons"
              }
            },
            {
              "name": "Get Person Details",
              "request": {
                "method": "GET",
                "url": "{{auth_url}}/api/persons/{{person_name}}"
              }
            },
            {
              "name": "Update Person",
              "request": {
                "method": "PUT",
                "header": [
                  { "key": "Content-Type", "value": "application/json" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"displayName\": \"John Updated\",\n  \"email\": \"john.updated@example.com\"\n}"
                },
                "url": "{{auth_url}}/api/persons/{{person_name}}"
              }
            },
            {
              "name": "Update Person Token",
              "request": {
                "method": "POST",
                "header": [
                  { "key": "Content-Type", "value": "application/json" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"refreshToken\": \"NEW_REFRESH_TOKEN_HERE\"\n}"
                },
                "url": "{{auth_url}}/api/persons/{{person_name}}/token"
              }
            },
            {
              "name": "Delete Person (Soft)",
              "request": {
                "method": "DELETE",
                "url": "{{auth_url}}/api/persons/{{person_name}}"
              }
            },
            {
              "name": "Delete Person (Permanent)",
              "request": {
                "method": "DELETE",
                "url": "{{auth_url}}/api/persons/{{person_name}}?permanent=true"
              }
            }
          ]
        },
        {
          "name": "Authentication",
          "item": [
            {
              "name": "Setup Person Token",
              "request": {
                "method": "POST",
                "header": [
                  { "key": "Content-Type", "value": "application/json" }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"personName\": \"{{person_name}}\",\n  \"refreshToken\": \"YOUR_REFRESH_TOKEN_HERE\"\n}"
                },
                "url": "{{auth_url}}/api/auth/setup-person"
              }
            },
            {
              "name": "Refresh Access Token",
              "request": {
                "method": "POST",
                "url": "{{auth_url}}/api/auth/refresh-token/{{person_name}}"
              }
            },
            {
              "name": "Get Token Status",
              "request": {
                "method": "GET",
                "url": "{{auth_url}}/api/auth/token-status/{{person_name}}"
              }
            },
            {
              "name": "Get Access Token",
              "request": {
                "method": "GET",
                "url": "{{auth_url}}/api/auth/access-token/{{person_name}}"
              }
            },
            {
              "name": "Test Connection",
              "request": {
                "method": "POST",
                "url": "{{auth_url}}/api/auth/test-connection/{{person_name}}"
              }
            }
          ]
        },
        {
          "name": "Tokens",
          "item": [
            {
              "name": "Get All Tokens",
              "request": {
                "method": "GET",
                "url": "{{auth_url}}/api/tokens"
              }
            },
            {
              "name": "Get Person Tokens",
              "request": {
                "method": "GET",
                "url": "{{auth_url}}/api/tokens/{{person_name}}"
              }
            },
            {
              "name": "Delete Expired Tokens",
              "request": {
                "method": "DELETE",
                "url": "{{auth_url}}/api/tokens/expired"
              }
            },
            {
              "name": "Get Token Statistics",
              "request": {
                "method": "GET",
                "url": "{{auth_url}}/api/tokens/stats/summary"
              }
            }
          ]
        }
      ]
    },
