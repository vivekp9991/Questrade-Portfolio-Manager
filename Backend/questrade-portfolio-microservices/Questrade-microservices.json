    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "auth_url", "value": "http://localhost:4001" },
    { "key": "sync_url", "value": "http://localhost:4002" },
    { "key": "portfolio_url", "value": "http://localhost:4003" },
    { "key": "market_url", "value": "http://localhost:4004" },
    { "key": "person_name", "value": "John" },
    { "key": "account_id", "value": "12345678" },
