# Server Configuration
PORT=4003
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/questrade_portfolio

# Service Dependencies
SYNC_API_URL=http://localhost:4002/api
AUTH_API_URL=http://localhost:4001/api

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_SECONDS=300
REDIS_URL=redis://localhost:6379

# Performance Settings
CALCULATION_BATCH_SIZE=100
MAX_CONCURRENT_CALCULATIONS=5

# Benchmark Data
DEFAULT_BENCHMARK=SPY
BENCHMARK_UPDATE_INTERVAL_HOURS=24

# Report Generation
REPORT_STORAGE_PATH=./reports
ENABLE_PDF_GENERATION=false

# Analytics
RISK_FREE_RATE=0.02
DEFAULT_TIME_PERIOD_DAYS=365

# Logging
LOG_LEVEL=info